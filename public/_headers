/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), fullscreen=(self)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  # سياسة أمن المحتوى (CSP)
  # تسمح بمواردنا + Tailwind CDN + Google Fonts + صور من https + بيانات base64
  Content-Security-Policy: default-src 'self'; script-src 'self' https://cdn.tailwindcss.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: https:; font-src 'self' https://fonts.gstatic.com; connect-src 'self'; object-src 'none'; base-uri 'self'; frame-ancestors 'none'
  # كاش افتراضي للمحتوى العام
  Cache-Control: public, max-age=600
)

# صفحات HTML — لا تُخزَّن بقوة لضمان تحديث فوري
/index.html
  Cache-Control: no-store

/admin.html
  Cache-Control: no-store

# ملفات الجافاسكربت — كاش طويل مع إعادة التحقق
/app.js
  Cache-Control: public, max-age=31536000, immutable

/admin.js
  Cache-Control: public, max-age=31536000, immutable

# أي أصول مستقبلية (صور/خطوط) يمكن تمييزها حسب الامتداد لزيادة الكاش عند الحاجة:
# /assets/*
#   Cache-Control: public, max-age=31536000, immutable
